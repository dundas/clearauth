{
  "name": "clearauth",
  "version": "0.4.1",
  "description": "ClearAuth: lightweight authentication library with Arctic OAuth, pluggable password hashing, and Kysely-backed storage",
  "keywords": [
    "clearauth",
    "auth",
    "arctic",
    "oauth",
    "argon2id",
    "authentication",
    "sessions",
    "typescript",
    "cloudflare-workers"
  ],
  "author": "Dundas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dundas/clearauth.git"
  },
  "bugs": {
    "url": "https://github.com/dundas/clearauth/issues"
  },
  "homepage": "https://github.com/dundas/clearauth#readme",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./edge": {
      "import": "./dist/edge.js",
      "types": "./dist/edge.d.ts"
    },
    "./argon2": {
      "import": "./dist/password-hasher-argon2.js",
      "types": "./dist/password-hasher-argon2.d.ts"
    },
    "./node": {
      "import": "./dist/node.js",
      "types": "./dist/node.d.ts"
    }
  },
  "scripts": {
    "build": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\" && tsc -p tsconfig.json",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "@libsql/client": "^0.14.0",
    "@neondatabase/serverless": "^0.10.0",
    "@planetscale/database": "^1.19.0",
    "postgres": "^3.4.0",
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "@neondatabase/serverless": {
      "optional": true
    },
    "@libsql/client": {
      "optional": true
    },
    "@planetscale/database": {
      "optional": true
    },
    "postgres": {
      "optional": true
    }
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "arctic": "^3.0.0",
    "jose": "^6.1.3",
    "kysely": "^0.27.3",
    "oslo": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "react": "^18.2.0",
    "typescript": "^5.6.3",
    "vitest": "^1.0.0"
  }
}
